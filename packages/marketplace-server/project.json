{
  "name": "@mcp-marketplace/server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/marketplace-server/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/marketplace-server",
        "main": "packages/marketplace-server/src/main.ts",
        "tsConfig": "packages/marketplace-server/tsconfig.app.json",
        "assets": ["packages/marketplace-server/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@mcp-marketplace/server:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "@mcp-marketplace/server:build"
        },
        "production": {
          "buildTarget": "@mcp-marketplace/server:build:production"
        }
      }
    }
  }
}
